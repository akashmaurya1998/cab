<%-include('partials/header')-%>
  <div class="row b-nav valign-wrapper">
    <div class="container">
      <div class="row">
        <form class="col s12 l5 m8 white" method="post" action="/check">
          <div class="row">
            <div class="input-field col s11">
              <a class="material-icons prefix grey-text text-darken-4">my_location</a>
              <input id="icon_location" type="text" class="validate" id="add" />
              <label for="icon_location">Pickup</label>
            </div>
            <div class="input-field col s11">
              <i class="material-icons prefix">location_on</i>
              <input id="icon_location_drop" type="text" class="validate">
              <label for="icon_location_drop">Destination</label>
            </div>
            <div class="input-field col s11">
              <i class="material-icons prefix">date_range</i>
              <input id="icon_date" type="text" class="datepicker">
              <label for="icon_date">When</label>
            </div>
            <div class="input-field col s11">
              <button class="btn waves-effect waves-light grey darken-4" type="submit" name="send">Book Cab
              </button>
              <a id="floc" class="btn waves-effect waves-light grey darken-4">Fetch Location</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('partials/footer')%>
